# Configurações do Sistema LUA
# Copie este arquivo para .env e ajuste as configurações

# Ambiente
NODE_ENV=development

# Segurança - MUDE EM PRODUÇÃO!
JWT_SECRET_KEY=dev-secret-change-in-production
WEBUI_SECRET_KEY=dev-webui-secret-change-in-production

# URLs dos Serviços (para containers Docker)
OLLAMA_API=http://ollama:11434
KOKORO_API=http://kokoro:8000
REDIS_URL=redis://redis:6379
BACKEND_API=http://backend:5000
WEBUI_URL=http://webui:8080

# Configurações Ollama
OLLAMA_MODELS=llama3.2:latest,mistral:latest,codellama:latest
OLLAMA_HOST=0.0.0.0

# Configurações TTS
TTS_MODEL=tts_models/multilingual/multi-dataset/xtts_v2
TTS_LANGUAGE=pt-BR
TTS_DEFAULT_VOICE=default

# Database
DATABASE_URL=sqlite:///app/data/lua.db

# Redis
REDIS_MAX_CONNECTIONS=50
REDIS_DECODE_RESPONSES=true

# CORS
CORS_ORIGINS=http://localhost,http://localhost:5173,http://localhost:3000

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Performance
WORKERS=4
THREADS=2
MAX_REQUESTS=1000
MAX_REQUESTS_JITTER=50

# Limites
MAX_FILE_SIZE=100MB
MAX_TEXT_LENGTH=10000
MAX_AUDIO_DURATION=300

# Cache
CACHE_TTL=3600
CACHE_MAX_SIZE=1GB

# WebUI
WEBUI_AUTH=false
ENABLE_SIGNUP=true
DEFAULT_USER_ROLE=user

# Proxy
NGINX_WORKER_PROCESSES=auto
NGINX_WORKER_CONNECTIONS=1024